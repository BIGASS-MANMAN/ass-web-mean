<% layout('header') -%>

<div class="container">
    <div class="row">
        <div class="jumbotron">
            <div class="page-header">
                <h1><%=data.subject%></h1>
            </div>
            <table class="table table-hover">
                <tr class="row">
                    <th class="col-md-2">제출기한</th>
                    <td class="col-md-10"><%=data.date%></td>
                </tr>
                <tr class="row">
                    <th class="col-md-2">내용</th>
                    <td class="col-md-10"><%=data.content%></td>
                </tr>
                <tr class="row">
                    <th class="col-md-2">제출양식</th>
                    <td class="col-md-10"><%=data.submit_form%></td>
                </tr>
                <tr class="row">
                    <th class="col-md-2">첨부파일</th>
                    <td class="col-md-10"><%=data.attachment%></td>
                </tr>
                <tr class="row">
                    <th class="col-md-2">아이디</th>
                    <td class="col-md-10"><%=data.id%></td>
                </tr>
                <tr class="row">
                    <th class="col-md-2">제출</th>
                    <td class="col-md-10">
                        <form action="/board/upload/<%=data.idx%>" method="post" enctype="multipart/form-data">
                            <div class="form-group form-group-lg label-floating">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="material-icons">attachment</i> </span>
                                    <label for="attachment" class="control-label">첨부파일</label>
                                    <input type='file' name='attachment' id="attachment" class="form-control" required>

                                    <input type="text" readonly="" class="form-control">
                                    <span class="input-group-btn input-group-sm">
                                      <button type="button" class="btn btn-fab btn-fab-mini btn-danger">
                                        <i class="material-icons">attach_file</i>
                                      </button>
                                    </span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-raised btn-block btn-inverse">제출</button>
                        </form>
                    </td>
                </tr>
            </table>
            <a href="/board/list" class="btn btn-lg btn-info btn-raised">목록</a>
        </div>
    </div>
</div>